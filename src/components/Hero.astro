---
import ArrowDownwardIcon from "./icons/ArrowDownwardIcon.astro";
import CheckCircleIcon from "./icons/CheckCircleIcon.astro";
import DocumentIcon from "./icons/DocumentIcon.astro";
import ScheduleIcon from "./icons/ScheduleIcon.astro";
import VerifiedCheckIcon from "./icons/VerifiedCheckIcon.astro";
---

<section id="inicio" class="relative h-screen overflow-hidden bg-gradient-to-br from-gray-600 to-gray-700">
  <!-- Patrón de fondo -->
  <div class="absolute inset-0 opacity-10" 
       style="background-image: url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI2MCIgaGVpZ2h0PSI2MCI+CiAgPHBhdGggZD0iTTAgMGg2MHY2MEgweiIgZmlsbD0ibm9uZSIvPgogIDxwYXRoIGQ9Ik0zMCAzMG0tMjggMGEyOCAyOCAwIDEgMSA1NiAwYTI4IDI4IDAgMSAxLTU2IDB6IiBzdHJva2U9IiMyMkM1NUUiIHN0cm9rZS13aWR0aD0iMC41IiBmaWxsPSJub25lIi8+Cjwvc3ZnPg=='); 
       background-size: 60px 60px;">
  </div>
  
  <!-- Formas decorativas -->
  <div class="absolute top-20 right-10 w-96 h-96 bg-green-500/20 rounded-full blur-3xl"></div>
  <div class="absolute bottom-10 left-10 w-96 h-96 bg-green-600/15 rounded-full blur-3xl"></div>
  <div class="absolute top-1/3 left-1/4 w-64 h-64 bg-yellow-500/10 rounded-full blur-3xl"></div>
  
  <!-- Contenido principal -->
  <div class="container mx-auto px-4 py-24 lg:py-28 relative z-10">
    <div class="max-w-4xl mx-auto">
      <div class="inline-block mb-6" data-aos="fade-down">
        <div class="relative">
          <div class="absolute inset-0 bg-green-500 transform rotate-3 rounded-lg"></div>
          <div class="relative bg-gray-700 text-green-400 font-bold py-2 px-6 rounded-lg shadow-md border border-green-500/30">
            SERVICIO PROFESIONAL DE FUMIGACIÓN
          </div>
        </div>
      </div>
      
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-extrabold text-white mb-8 leading-tight" data-aos="fade-up" data-aos-delay="100">
        <span class="block">Elimina las plagas,</span>
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-green-300">recupera tu tranquilidad</span>
      </h1>
      
      <p class="text-xl md:text-2xl text-gray-300 mb-10 max-w-3xl" data-aos="fade-up" data-aos-delay="200">
        Soluciones efectivas y seguras para el control de plagas en hogares y negocios. 
        Nuestro equipo de expertos garantiza resultados duraderos con métodos confiables y de alta calidad.
      </p>
      
      <!-- Características destacadas -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-10" data-aos="fade-up" data-aos-delay="300">
        <div class="flex items-center">
          <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-full p-3 mr-3 shadow-lg shadow-green-500/30">
            <VerifiedCheckIcon class="h-6 w-6 text-white" />
          </div>
          <span class="text-gray-300">Técnicos certificados</span>
        </div>
        
        <div class="flex items-center">
          <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-full p-3 mr-3 shadow-lg shadow-green-500/30">
            <DocumentIcon class="h-6 w-6 text-white" />
          </div>
          <span class="text-gray-300">Productos profesionales</span>
        </div>
        
        <div class="flex items-center">
          <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-full p-3 mr-3 shadow-lg shadow-green-500/30">
            <CheckCircleIcon class="h-6 w-6 text-white" />
          </div>
          <span class="text-gray-300">Garantía de satisfacción</span>
        </div>
        
        <div class="flex items-center">
          <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-full p-3 mr-3 shadow-lg shadow-green-500/30">
            <ScheduleIcon class="h-6 w-6 text-white" />
          </div>
          <span class="text-gray-300">Respuesta en 24 horas</span>
        </div>
      </div>
      
      <!-- Botones CTA -->
      <div class="flex flex-col sm:flex-row gap-4 mb-8" data-aos="fade-up" data-aos-delay="400">
        <a href="#contacto" class="btn btn-primary">
          Solicitar Servicio
        </a>
        <a href="#servicios" class="btn btn-outline-light">
          Ver Servicios
        </a>
      </div>
    </div>
  </div>
  
  <!-- Flecha hacia abajo -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10 animate-bounce">
    <a href="#servicios" aria-label="Ir a servicios" class="p-3 rounded-full shadow-lg transition-colors">
      <ArrowDownwardIcon class="h-6 w-6 text-white" />
    </a>
  </div>
  
</section>
