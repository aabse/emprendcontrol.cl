    <!-- Gallery Filter Script -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const tabAll = document.getElementById('tab-all');
        const tabImages = document.getElementById('tab-images');
        const tabVideos = document.getElementById('tab-videos');
        const galleryItems = document.querySelectorAll('.gallery-item');
        
        // Set active tab style
        function setActiveTab(activeTab: any) {
          [tabAll, tabImages, tabVideos].forEach(tab => {
            if (tab === activeTab) {
              tab?.classList.remove('bg-white', 'text-gray-700');
              tab?.classList.add('bg-gradient-to-r', 'from-green-500', 'to-green-600', 'text-white', 'shadow-md', 'shadow-green-500/20');
            } else {
              tab?.classList.remove('bg-gradient-to-r', 'from-green-500', 'to-green-600', 'text-white', 'shadow-md', 'shadow-green-500/20');
              tab?.classList.add('bg-white', 'text-gray-700');
            }
          });
        }
        
        // Filter gallery items
        tabAll?.addEventListener('click', function() {
          setActiveTab(tabAll);
          galleryItems.forEach((item: any) => {
            item.style.display = 'block';
          });
        });
        
        tabImages?.addEventListener('click', function() {
          setActiveTab(tabImages);
          galleryItems.forEach((item: any) => {
            if (item.classList.contains('image')) {
              item.style.display = 'block';
            } else {
              item.style.display = 'none';
            }
          });
        });
        
        tabVideos?.addEventListener('click', function() {
          setActiveTab(tabVideos);
          galleryItems.forEach((item: any) => {
            if (item.classList.contains('video')) {
              item.style.display = 'block';
            } else {
              item.style.display = 'none';
            }
          });
        });
      });
    </script>
